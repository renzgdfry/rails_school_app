<% content_for :title, "Students" %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <div class="d-flex align-items-center gap-2">
    <i class="bi bi-person-lines-fill fs-3"></i>
    <h2 class="fw-bold m-0">List of Students</h2>
  </div>

   <%= link_to new_student_path, class: "btn btn-success rounded-pill d-flex align-items-center gap-2" do %>
    <i class="bi bi-person-fill-add"></i>
    <span class="fw-semibold text-white">New Student</span>
  <% end %>
</div>

<div class="border shadow-sm p-4 rounded-4 table-responsive bg-white">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th class="text-secondary fw-normal">Name</th>
        <th class="text-secondary fw-normal">Year Level</th>
        <th class="text-secondary fw-normal">Program</th>
        <th class="text-secondary fw-normal">Units</th>
        <th class="text-secondary fw-normal">Total Assessment</th>
        <th class="text-secondary fw-normal">Department</th>
        <th class="text-secondary fw-normal">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @students.each do |student| %>
        <tr class="fw-medium">
          <td><%= student.name %></td>
          <td><%= student.year_level %></td>
          <td><%= student.program %></td>
          <td><%= student.number_of_units %></td>
          <td><%= student.total_assessment %></td>
          <td><%= student.department.name %></td>
          <td class="d-flex gap-2">
            <%= link_to "Show", student, class: "btn btn-sm btn-primary" %>
            <%= link_to "Edit", edit_student_path(student), class: "btn btn-sm btn-secondary" %>
            <%= button_tag "Delete",
              type: "button",
              class: "btn btn-sm btn-danger",
              data: { bs_toggle: "modal", bs_target: "#confirmDeleteModal", student_id: student.id } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>