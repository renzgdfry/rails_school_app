<div id="<%= dom_id @student %>" class="border shadow-sm rounded-3 overflow-hidden mb-3">
  <div class="p-4 d-flex align-items-center gap-3 text-white"
       style="
         background: linear-gradient(135deg, rgba(13, 60, 150, 0.9), rgba(70, 130, 180, 0.8));
         backdrop-filter: blur(8px);
         -webkit-backdrop-filter: blur(8px);
         border-bottom: 1px solid rgba(255, 255, 255, 0.15);
         box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
       ">
    <i class="bi bi-person-vcard-fill fs-1" style="text-shadow: 0 0 6px rgba(173, 216, 230, 0.8);"></i>

    <div class="d-flex flex-column justify-content-center">
      <h3 class="mb-0 fw-bold"><%= @student.name %></h3>
      <p class="mb-0 opacity-75"><%= @student.department.name %> - <%= @student.program %></p>
    </div>
  </div>

  <div class="p-4">
    <div class="row text-center g-3">
      <div class="col-12 col-md-3">
        <p class="text-secondary small mb-1">Year Level</p>
        <h5><%= @student.year_level %></h5>
      </div>
      <div class="col-12 col-md-3">
        <p class="text-secondary small mb-1">Total Number of Units</p>
        <h5><%= @student.number_of_units %></h5>
      </div>
      <div class="col-12 col-md-3">
        <p class="text-secondary small mb-1">Total Assessment</p>
        <h5>â‚±<%= number_with_delimiter(@student.total_assessment) %></h5>
      </div>
      <div class="col-12 col-md-3">
        <p class="text-secondary small mb-1">Number of Guardians</p>
        <h5><%= @student.guardians.count %></h5>
      </div>
    </div>
  </div>
</div>

<div class="border rounded p-3 shadow-sm mb-3 table-responsive">
  <h3>Subjects List</h3>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th class="text-secondary fw-normal">Section</th>
        <th class="text-secondary fw-normal">Subject</th>
        <th class="text-secondary fw-normal">Units</th>
        <th class="text-secondary fw-normal">Teacher</th>
      </tr>
    </thead>
    <tbody>
      <% @student.classlists.each do |classlist| %>
        <tr class="fw-medium">
          <td><%= classlist.section.name %></td>
          <td><%= classlist.section.subject.name %></td>
          <td><%= classlist.section.subject.number_of_units %></td>
          <td><%= classlist.section.subject.teacher.name %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="d-flex justify-content-between mt-3">
  <div class="d-flex gap-2">
    <%= link_to "#",
      class: "btn btn-danger d-flex align-items-center gap-2",
      data: { bs_toggle: "modal", bs_target: "#confirmDeleteModal", student_id: @student.id } do %>
      <i class="bi bi-trash-fill"></i>
      Destroy this student
    <% end %>

    <%= link_to edit_student_path(@student), class: "btn btn-success d-flex align-items-center gap-2" do %>
      <i class="bi bi-gear-fill"></i>
      Edit this student
    <% end %>
  </div>

  <div>
    <%= link_to students_path, class: "btn btn-secondary d-flex align-items-center gap-2" do %>
      <i class="bi bi-box-arrow-left"></i>
      Back to students
    <% end %>
  </div>
</div>