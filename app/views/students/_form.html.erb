<div class="border rounded-4 p-4 shadow-sm">          
  <%= form_with(model: student) do |form| %>
    <% if student.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(student.errors.count, "error") %> prohibited this student from being saved:</h2>
        <ul>
          <% student.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="mb-3">
      <%= form.label :name, class: "form-label fw-bold" %>
      <%= form.text_field :name, class: "form-control", placeholder: "Enter student name" %>
    </div>
  
    <div class="mb-3">
      <%= form.label :year_level, class: "form-label fw-bold" %>
      <%= form.number_field :year_level, class: "form-control", placeholder: "Enter year level" %>
    </div>
  
    <div class="mb-3">
      <%= form.label :program, class: "form-label fw-bold" %>
      <%= form.text_field :program, class: "form-control", placeholder: "Enter program" %>
    </div>
  
    <div class="mb-3">
      <%= form.label :department_id, "Department", class: "form-label fw-bold" %>
      <%= form.collection_select :department_id, Department.all, :id, :name, { prompt: "Select a department" }, { class: "form-select" } %>
    </div>
      
    <% if student.new_record? %>
      <div class="d-flex justify-content-between">
        <div>
          <%= link_to students_path, class: "btn btn-secondary d-flex align-items-center gap-2" do %>
            <i class="bi bi-box-arrow-in-left"></i>
            Back to students
          <% end %>
        </div>
        <div>
          <%= form.button class: "btn btn-success d-flex align-items-center gap-2" do %>
            <i class="bi bi-person-fill-up"></i>
            Create Student
          <% end %>
        </div>
      </div>
    <% else %>
      <div class="d-flex justify-content-between align-items-center mt-3">
        <div class="d-flex gap-2">
          <%= link_to "#",
              class: "btn btn-danger d-flex align-items-center gap-2",
              data: { bs_toggle: "modal", bs_target: "#confirmDeleteModal", student_id: student.id } do %>
            <i class="bi bi-person-fill-x"></i>
            Destroy this student
          <% end %>

          <%= form.button class: "btn btn-success d-flex align-items-center gap-2" do %>
            <i class="bi bi-person-fill-up"></i>
            Update Student
          <% end %>
        </div>

        <%= link_to students_path, class: "btn btn-secondary d-flex align-items-center gap-2" do %>
          <i class="bi bi-box-arrow-in-left"></i>
          Back to students
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>  