<% content_for :title, "Student Guardians" %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <div class="d-flex align-items-center gap-2">
    <i class="bi bi-people fs-3"></i>
    <h2 class="fw-bold m-0">List of Student-Guardians</h2>
  </div>

  <%= link_to new_student_guardian_path, class: "btn btn-success rounded-pill d-flex align-items-center gap-2" do %>
    <i class="bi bi-person-fill-add"></i>
    <span class="fw-semibold text-white">New Student Guardian</span>
  <% end %>
</div>

<div class="border shadow-sm p-4 rounded-4 table-responsive bg-white">
  <table class="table table-striped table-hover w-100">
    <thead>
      <tr>
        <th class="text-secondary fw-normal" style="width: 30%;">Guardian Name</th>
        <th class="text-secondary fw-normal" style="width: 30%;">Student Name</th>
        <th class="text-secondary fw-normal" style="width: 30%;">Relationship</th>
        <th class="text-secondary fw-normal text-center" style="width: 10%;">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @student_guardians.each do |student_guardian| %>
        <tr class="fw-medium">
          <td><%= student_guardian.guardian.name %></td>
          <td><%= student_guardian.student.name %></td>
          <td><%= student_guardian.relationship %></td>
          <td class="d-flex justify-content-center gap-2">
            <%= link_to "Show", student_guardian, class: "btn btn-sm btn-primary" %>
            <%= link_to "Edit", edit_student_guardian_path(student_guardian), class: "btn btn-sm btn-secondary" %>
            <%= button_tag "Delete",
              type: "button",
              class: "btn btn-sm btn-danger",
              data: { bs_toggle: "modal", bs_target: "#confirmDeleteModal", student_guardian_id: student_guardian.id } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>