<% content_for :no_container, true %>


<!-- Top Header with Logo -->
<div class="top-header d-flex flex-column justify-content-center align-items-center">
  <%= image_tag "tech.png", alt: "School Logo", class: "school-logo" %>
</div>

<!-- Hero Section -->
<section class="hero-section position-relative">

  <!-- Background Image -->
  <img src="<%= asset_path("home_bg1.jpg") %>" class="hero-bg" alt="Hero Background">

  <!-- Top fade -->
  <div class="hero-blue-fade"></div>

  <!-- Bottom fade -->
  <div class="hero-white-fade"></div>

</section>

<style>
/* Top Header */
.top-header {
  background-color: #0056b3;
  padding: 35px 0; /* extended top blue space */
  text-align: center;
  margin-top: 40px;
}

.school-logo {
  height: 100px;
  object-fit: contain;
}

.hero-univ-name {
  font-family: serif;
  font-weight: 700;
  font-size: 2rem;
  color: white;
  margin: 0;
}

.hero-tagline {
  font-family: serif;
  font-weight: 400;
  font-size: 1.1rem;
  color: white;
  margin: 0;
}

/* Hero Section */
.hero-section {
  height: 80vh;
  width: 100%;
  overflow: hidden;
  position: relative;
}

.hero-bg {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  filter: brightness(0.9);
  z-index: 1;
}

.hero-blue-fade {
  position: absolute;
  top: 0;
  left: 0;
  height: 180px;
  width: 100%;
  background: linear-gradient(to bottom, #0056b3 0%, rgba(0,0,0,0) 100%);
  z-index: 2;
}

.hero-white-fade {
  position: absolute;
  bottom: 0;
  left: 0;
  height: 150px;
  width: 100%;
  background: linear-gradient(to bottom, rgba(0,0,0,0) 0%, white 100%);
  z-index: 2;
}

/* Remove spacing for homepage */
body {
  padding-top: 0 !important;
}

.main-content {
  padding: 0 !important;
  margin-top: 0 !important;
}

/* Navbar styles - always blue */
.top-navbar {
  position: fixed;
  top: 0;
  width: 100%;
  height: 70px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 1rem;
  z-index: 1030;
  background-color: #0056b3;
  color: white;
  font-weight: 600;
  font-family: serif;
}

.navbar-school-name {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  font-size: 1.5rem;
  color: white;
  margin: 0;
  opacity: 1; 

.top-navbar.scrolled {
  background-color: #0056b3 !important;
}

.top-navbar.scrolled .navbar-school-name {
  opacity: 1;
}

</style>




