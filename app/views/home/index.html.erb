<section id="stats" class="stats-section-wrapper">
    <div class="stats-section">
        <!-- Section Title -->
        <h2 class="section-title">Stats That Set Us Apart</h2>

        <!-- Tabs -->
        <div class="tabs">
            <div class="tab active" onclick="switchTab('academics', event)">Academics</div>
            <div class="tab" onclick="switchTab('innovation', event)">Innovation & Research</div>
