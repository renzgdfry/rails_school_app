    </div>

  <script>
    function switchTab(tabId, event){
        const section = event.target.closest('.stats-section');

        // Switch active tab
        section.querySelectorAll(".tab").forEach(t => t.classList.remove("active"));
        event.target.classList.add("active");

        // Show only active tab content
        section.querySelectorAll(".tab-content").forEach(c => c.style.display = "none");
        const activeContent = section.querySelector("#" + tabId);
        activeContent.style.display = "block";

        // Start counters for the newly active tab
        startCounters(activeContent);
    }

    // Counter animation
    function startCounters(container){
        const counters = container.querySelectorAll(".count");
        counters.forEach(counter => {
            const target = Number(counter.dataset.target);
            let current = 0;
            const step = target / 60;

            function update(){
                current += step;
                if(current < target){
                    counter.textContent = Math.ceil(current);
                    requestAnimationFrame(update);
                } else {
                    counter.textContent = target;
                }
            }

            counter.textContent = "0";
            update();
        });
    }

    // Check if element is in viewport
    function isElementInViewport(el) {
        const rect = el.getBoundingClientRect();
        return (
            rect.top < (window.innerHeight || document.documentElement.clientHeight) &&
            rect.bottom > 0
        );
    }

    // Scroll listener to restart counters when section scrolls into view
    document.addEventListener("DOMContentLoaded", () => {
        const section = document.querySelector('.stats-section');
        
        // Start counters immediately for first tab
        const firstTab = section.querySelector(".tab.active");
        if(firstTab){
            const tabId = firstTab.getAttribute("onclick").match(/'(.+?)'/)[1];
            const activeContent = section.querySelector("#" + tabId);
            startCounters(activeContent);
        }

        // Re-run counters when section is scrolled into view
        window.addEventListener("scroll", () => {
            if(isElementInViewport(section)){
                const activeTab = section.querySelector(".tab.active");
                const tabId = activeTab.getAttribute("onclick").match(/'(.+?)'/)[1];
                const activeContent = section.querySelector("#" + tabId);
                startCounters(activeContent);
            }
        });
    });
  </script>
</section>


