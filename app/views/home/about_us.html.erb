<% content_for :no_container, true %>

<style>
body {
  margin: 0;
  padding: 0;
  height: 100%;
  background: black;
  z-index: 0;
  overflow-x: hidden;
}

.hero-section {
  height: 60vh;
  width: 100%;
  overflow: visible;
  position: relative;
  z-index: 0;
}

.about-hero-section {
  width: 100vw;
  margin-top: calc(50% - 50vw);
  margin-left: calc(50% - 50vw);
  margin-right: calc(50% - 50vw);
}

.hero-bg {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  filter: brightness(0.7);
  z-index: 0;
}


.hero-section h1 {
  z-index: 3;
  font-weight: 800;
  font-size: 5rem;
  letter-spacing: 2px;
  text-transform: uppercase;
}

.preview-section-wrapper {
  margin-top: -120px; 
  position: relative;
  z-index: 10;
}

.glass-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30px;
  border-radius: 22px;

  background: rgba(40, 40, 40, 0.25);  
  backdrop-filter: blur(16px);
  -webkit-backdrop-filter: blur(16px);
  border: 1px solid rgba(255, 255, 255, 0.1); 

  box-shadow:
    0 0 20px rgba(0, 0, 0, 0.25),
    inset 0 0 15px rgba(255, 255, 255, 0.05);

  transition: transform 0.3s ease, box-shadow 0.3s ease;
  text-align: center;
  color: #f1f1f1; 
}

.glass-card:hover {
  transform: translateY(-10px);
  box-shadow:
    0 0 25px rgba(0, 0, 0, 0.35),
    inset 0 0 20px rgba(255, 255, 255, 0.08);
}

.glass-card h4 a {
  color: #f1f1f1;
}

.glass-card p.text-mutedd {
  color: rgba(255, 255, 255, 0.7);
}

.glass-card .btn-outline-primary {
  color: #f1f1f1;
  border-color: rgba(255, 255, 255, 0.5);
  background-color: rgba(60, 60, 60, 0.4);  
}

.glass-card .btn-outline-primary:hover {
  background-color: rgba(255, 255, 255, 0.1);
  border-color: rgba(255, 255, 255, 0.7);
  color: #fff;
}


.big-member-card {
  display: flex;
  align-items: center;
  padding: 60px;
  border-radius: 25px;
  min-height: 60vh;

  background: rgba(40, 60, 100, 0.55); 
  backdrop-filter: blur(14px);
  -webkit-backdrop-filter: blur(14px);
  border: 1px solid rgba(80, 130, 200, 0.35); 

  box-shadow:
    0 0 30px rgba(30, 70, 140, 0.25),
    inset 0 0 20px rgba(255, 255, 255, 0.05);

  color: white;           
  transition: transform 0.3s ease;
  margin-bottom: 50px;
}

.big-member-card:hover {
  transform: translateY(-10px);  
}

.big-member-photo {
  width: 300px;
  height: 300px;
  border-radius: 50%;
  object-fit: cover;
  box-shadow: 0 10px 20px rgba(0,0,0,0.4);
}

.big-member-name {
  font-size: 3.5rem;
  font-weight: bold;
}

.big-member-role {
  font-size: 1.4rem;
  opacity: 0.9;
  margin-bottom: 15px;
}

.big-member-desc {
  font-size: 1.1rem;
  opacity: 0.95;
  margin-bottom: 25px;
  line-height: 1.6;
}

.big-socials {
  margin-top: 25px;
}

.big-socials a {
  color: white;
  font-size: 2rem;
  margin-right: 20px;
  transition: 0.3s ease;
}

.big-socials a:hover {
  color: #4db8ff;
  transform: translateY(-4px);
}

.about-title {
  color: white;     
  font-weight: bold;  
  font-size: 3.4rem;
  text-align: center;   
  font-family: "Arial", "Helvetica", sans-serif;
}

.glass-card p.text-mutedd {
  color: white; 
  opacity: 0.5;  
}

.big-member-card .btn-outline-primary {
  color: #f1f1f1;                 
  border-color: rgba(255, 255, 255, 0.5);
  background-color: rgba(60, 60, 60, 0.4);
  padding: 0.375rem 0.75rem;     
  font-size: 0.875rem;            
  line-height: 1.5;
  border-radius: 0.25rem;
  transition: transform 0.3s ease, box-shadow 0.3s ease, background-color 0.3s ease;
}

.big-member-card .btn-outline-primary:hover {
  background-color: rgba(255, 255, 255, 0.1);
  border-color: rgba(255, 255, 255, 0.7);
  color: #fff;
  transform: translateY(-3px);
  box-shadow: 0 6px 20px rgba(0, 0, 0, 0.35), inset 0 0 12px rgba(255, 255, 255, 0.1);
}

.big-member-card {
  box-shadow:
    0 0 20px rgba(255, 255, 255, 0.15),
    0 0 40px rgba(70, 140, 255, 0.25),
    inset 0 0 20px rgba(255, 255, 255, 0.05);
}

.big-member-card .btn-outline-primary {
  color: #e0f0ff;                       
  background: rgba(10, 60, 120, 0.45);
  border: 1px solid rgba(70, 140, 255, 0.7);
  backdrop-filter: blur(12px);
  -webkit-backdrop-filter: blur(12px);
  box-shadow:
    0 4px 15px rgba(0, 0, 0, 0.25),
    inset 0 0 10px rgba(255, 255, 255, 0.05);
  transition: 0.3s ease, transform 0.3s ease;
}

.big-member-card .btn-outline-primary:hover {
  background: rgba(30, 90, 180, 0.6);  
  border-color: rgba(90, 160, 255, 0.9);
  color: #fff;
  transform: translateY(-3px);
  box-shadow:
    0 6px 20px rgba(0, 0, 0, 0.35),
    inset 0 0 12px rgba(255, 255, 255, 0.1);
}
</style>

