<% content_for :no_container, true %>

<style>
body {
  margin: 0;
  padding: 0;

  /* Background image */
  background-image: url('<%= asset_path "background.jpg" %>'); /* replace with your file name */
  background-size: cover;        /* makes the image cover the whole screen */
  background-position: center;   /* centers the image */
  background-repeat: no-repeat;  /* prevents tiling */
  background-attachment: fixed;  /* optional: stays fixed when scrolling */
  z-index: 0;
}


/* HERO SECTION */
.hero-section {
  height: 30vh;
  width: 100%;
  overflow: visible;
  position: relative;
  z-index: 0;
}

/* FORCE FULL WIDTH – removes white left/right gap */
.about-hero-section {
  width: 100vw;
  margin-top: calc(50% - 50vw);
  margin-left: calc(50% - 50vw);
  margin-right: calc(50% - 50vw);
}

.hero-bg {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  filter: brightness(0.7);
  z-index: 0;
}


/* HERO TEXT */
.hero-section h1 {
  z-index: 3;
  font-weight: 800;
  font-size: 5rem;
  letter-spacing: 2px;
  text-transform: uppercase;
}

/* GLASS PREVIEW CARDS – Neutral glass to complement dark blue hero */
.preview-section-wrapper {
  margin-top: -120px; 
  position: relative;
  z-index: 10;
}

.glass-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30px;
  border-radius: 22px;

  /* Neutral glass background */
  background: rgba(245, 245, 245, 0.3);   /* soft light gray, semi-transparent */
  backdrop-filter: blur(14px);
  -webkit-backdrop-filter: blur(14px);
  border: 1px solid rgba(220, 220, 220, 0.4);

  /* Shadow for depth */
  box-shadow:
    0 0 20px rgba(0, 0, 0, 0.15),
    inset 0 0 15px rgba(255, 255, 255, 0.1);

  transition: transform 0.3s ease, box-shadow 0.3s ease;
  text-align: center;
  color: #222;  /* dark text for readability */
}

.glass-card:hover {
  transform: translateY(-10px);
  box-shadow:
    0 0 25px rgba(0, 0, 0, 0.2),
    inset 0 0 20px rgba(255, 255, 255, 0.15);
}

/* Card text styling */
.glass-card h4 a {
  color: #222;
  font-weight: bold;
}

.glass-card p {
  color: rgba(50, 50, 50, 0.85);
}

.glass-card .btn-outline-primary {
  border-color: rgba(180, 180, 180, 0.7);
  color: #222;
}

.glass-card .btn-outline-primary:hover {
  background-color: rgba(200, 200, 200, 0.7);
  border-color: rgba(200, 200, 200, 0.7);
}

.big-member-card {
  display: flex;
  align-items: center;
  padding: 60px;
  border-radius: 25px;
  min-height: 60vh;

  /* Lighter dark blue glass background */
  background: rgba(40, 60, 100, 0.55);  /* lighter dark-blue glass */
  backdrop-filter: blur(14px);
  -webkit-backdrop-filter: blur(14px);
  border: 1px solid rgba(80, 130, 200, 0.35); /* subtle blue border */

  /* Shadows to give depth */
  box-shadow:
    0 0 30px rgba(30, 70, 140, 0.25),
    inset 0 0 20px rgba(255, 255, 255, 0.05);

  color: white;           /* text color remains readable */
  transition: transform 0.3s ease;
  margin-bottom: 50px;
}

.big-member-card:hover {
  transform: translateY(-10px);  /* subtle lift */
}

/* Member Photo */
.big-member-photo {
  width: 300px;
  height: 300px;
  border-radius: 50%;
  object-fit: cover;
  box-shadow: 0 10px 20px rgba(0,0,0,0.4);
}

/* Name and Role Text */
.big-member-name {
  font-size: 3.5rem;
  font-weight: bold;
}

.big-member-role {
  font-size: 1.4rem;
  opacity: 0.9;
  margin-bottom: 15px;
}

.big-member-desc {
  font-size: 1.1rem;
  opacity: 0.95;
  margin-bottom: 25px;
  line-height: 1.6;
}

/* Social Icons */
.big-socials {
  margin-top: 25px;
}

.big-socials a {
  color: white;
  font-size: 2rem;
  margin-right: 20px;
  transition: 0.3s ease;
}

.big-socials a:hover {
  color: #4db8ff;
  transform: translateY(-4px);
}

.about-title {
  color: white;     
  font-weight: bold;  
  font-size: 3.4rem;
  text-align: center;   
  font-family: "Arial", "Helvetica", sans-serif;
}

/* Member role text */
.glass-card p.text-mutedd {
  color: white;  /* pure white */
  opacity: 0.5;  /* optional: slightly softer if needed */
}

/* Read More button */
.glass-card .btn-outline-primary {
  color: white;                  /* text white */
  border-color: #004a99;         /* bright blue border */
  background-color: #004a99;     /* blue button background */
  transition: 0.3s ease;
}

.glass-card .btn-outline-primary:hover {
  background-color: #1c86ee;     /* slightly darker blue on hover */
  border-color: #1c86ee;
  color: white;
}
</style>

