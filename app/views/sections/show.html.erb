<div id="<%= dom_id @section %>" class="border shadow-sm rounded-3 overflow-hidden mb-3">
  <div class="p-4 d-flex align-items-center gap-3 text-white"
       style="
         background: linear-gradient(135deg, rgba(13, 60, 150, 0.9), rgba(70, 130, 180, 0.8));
         backdrop-filter: blur(8px);
         -webkit-backdrop-filter: blur(8px);
         border-bottom: 1px solid rgba(255, 255, 255, 0.15);
         box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
       ">
    <i class="bi bi-diagram-3 fs-1" style="text-shadow: 0 0 6px rgba(173, 216, 230, 0.8);"></i>
    <div class="d-flex flex-column justify-content-center">
      <h3 class="mb-0 fw-bold"><%= @section.name %></h3>
    </div>
  </div>


  <div class="p-4 border-bottom">
    <div class="row text-center g-3 justify-content-center">
      <div class="col-12 col-md-3">
        <p class="text-secondary small mb-1">Room</p>
        <h5><%= @section.room.presence || "—" %></h5>
      </div>

      <div class="col-12 col-md-3">
        <p class="text-secondary small mb-1">Time Slot</p>
        <h5><%= @section.time_slot.presence || "—" %></h5>
      </div>

      <div class="col-12 col-md-3">
        <p class="text-secondary small mb-1">Subject</p>
        <h5><%= @section.subject.name %></h5>
      </div>

      <div class="col-12 col-md-3">
        <p class="text-secondary small mb-1">Teacher</p>
        <h5><%= @section.subject.teacher.name %></h5>
      </div>
    </div>
  </div>
</div>

<div class="d-flex justify-content-between mt-3">
  <div class="d-flex gap-2">
    <%= link_to edit_section_path(@section), class: "btn btn-success d-flex align-items-center gap-2" do %>
      <i class="bi bi-gear-fill"></i>
      Edit this section
    <% end %>

    <%= button_to section_path(@section),
      method: :delete,
      class: "btn btn-danger d-flex align-items-center gap-2",
      data: { turbo_confirm: "Are you sure you want to delete this section?" } do %>
      <i class="bi bi-trash-fill"></i>
      Destroy this section
    <% end %>
  </div>

  <div>
    <%= link_to sections_path, class: "btn btn-secondary d-flex align-items-center gap-2" do %>
      <i class="bi bi-box-arrow-left"></i>
      Back to sections
    <% end %>
  </div>
</div>
