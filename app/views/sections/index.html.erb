<% content_for :title, "Sections" %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <div class="d-flex align-items-center gap-2">
    <i class="bi bi-diagram-3 fs-3"></i>
    <h2 class="fw-bold m-0">List of Sections</h2>
  </div>

  <%= link_to new_section_path, class: "btn btn-success rounded-pill d-flex align-items-center gap-2" do %>
    <i class="bi bi-plus-circle"></i>
    <span class="fw-semibold text-white">New Section</span>
  <% end %>
</div>

<div class="border shadow-sm p-4 rounded-4 table-responsive bg-white">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th class="text-secondary fw-normal">Name</th>
        <th class="text-secondary fw-normal">Subject</th>
        <th class="text-secondary fw-normal">Teacher</th>
        <th class="text-secondary fw-normal">Room</th>
        <th class="text-secondary fw-normal">Time Slot</th>
        <th class="text-secondary fw-normal">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @sections.each do |section| %>
        <tr class="fw-medium">
          <td><%= section.name %></td>
          <td><%= section.subject.name %></td>
          <td><%= section.subject.teacher.name %></td>
          <td><%= section.room %></td>
          <td><%= section.time_slot %></td>
          <td class="d-flex gap-2">
            <%= link_to "Show", section, class: "btn btn-sm btn-primary" %>
            <%= link_to "Edit", edit_section_path(section), class: "btn btn-sm btn-secondary" %>
            <%= button_tag "Delete",
              type: "button",
              class: "btn btn-sm btn-danger",
              data: { bs_toggle: "modal", bs_target: "#confirmDeleteModal", section_id: section.id } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>