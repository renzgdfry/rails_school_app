<div class="border rounded-4 p-4 shadow-sm">
  <%= form_with(model: guardian) do |form| %>
    <% if guardian.errors.any? %>
      <div class="alert alert-danger">
        <h4><%= pluralize(guardian.errors.count, "error") %> prohibited this guardian from being saved:</h4>
        <ul>
          <% guardian.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= form.label :name, class: "form-label fw-bold" %>
      <%= form.text_field :name, class: "form-control", placeholder: "Enter guardian name" %>
    </div>

    <div class="mb-3">
      <%= form.label :email_address, class: "form-label fw-bold" %>
      <%= form.text_field :email_address, class: "form-control", placeholder: "Enter guardian email address" %>
    </div>

    <div class="mb-3">
      <%= form.label :contact_number, class: "form-label fw-bold" %>
      <%= form.text_field :contact_number, class: "form-control", placeholder: "Enter contact number" %>
    </div>

    <% if guardian.new_record? %>
      <div class="d-flex justify-content-between">
        <%= link_to guardians_path,
            class: "btn btn-outline-secondary d-flex align-items-center gap-2 btn-glass",
            style: "padding: 0.6rem 1.4rem; border-radius: 50px; font-weight: 600;" do %>
          <i class="bi bi-box-arrow-left"></i>
          Back to guardians
        <% end %>

        <%= form.button class: "btn btn-outline-success d-flex align-items-center gap-2 btn-glass",
            style: "padding: 0.6rem 1.4rem; border-radius: 50px; font-weight: 600;" do %>
          <i class="bi bi-plus-circle-fill"></i>
          Create Guardian
        <% end %>
      </div>
    <% else %>
      <div class="d-flex justify-content-between align-items-center mt-3">
        <div class="d-flex gap-2">
          <%= link_to "#",
              class: "btn btn-outline-danger d-flex align-items-center gap-2 btn-glass",
              style: "padding: 0.6rem 1.4rem; border-radius: 50px; font-weight: 600;",
              data: { bs_toggle: "modal", bs_target: "#confirmDeleteModal", guardian_id: guardian.id } do %>
            <i class="bi bi-trash-fill"></i>
            Delete Guardian
          <% end %>

          <%= form.button class: "btn btn-outline-success d-flex align-items-center gap-2 btn-glass",
              style: "padding: 0.6rem 1.4rem; border-radius: 50px; font-weight: 600;" do %>
            <i class="bi bi-arrow-repeat"></i>
            Update Guardian
          <% end %>
        </div>

        <%= link_to guardians_path,
            class: "btn btn-outline-secondary d-flex align-items-center gap-2 btn-glass",
            style: "padding: 0.6rem 1.4rem; border-radius: 50px; font-weight: 600;" do %>
          <i class="bi bi-box-arrow-left"></i>
          Back to guardians
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>