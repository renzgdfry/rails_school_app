<style>
body {
  background: linear-gradient(
    to bottom,
    #004a99 10%,
    rgba(0, 74, 153, 0.5) 70%,
    rgba(0, 74, 153, 0) 100%
  );
  min-height: 100vh;
}
</style>

<div id="<%= dom_id @guardian %>" class="border shadow-sm rounded-3 overflow-hidden mb-3">
  <div class="p-4 d-flex align-items-center gap-3 text-white"
       style="
         background: #004a99;
         backdrop-filter: blur(8px);
         -webkit-backdrop-filter: blur(8px);
         border-bottom: 1px solid rgba(255, 255, 255, 0.15);
         box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
       ">
    <i class="bi bi-person-lines-fill fs-1" style="text-shadow: 0 0 6px rgba(173, 216, 230, 0.8);"></i>
    <div class="d-flex flex-column justify-content-center">
      <h3 class="mb-0 fw-bold"><%= @guardian.name %></h3>
      <p class="mb-0 opacity-75">Guardian</p>
    </div>
  </div>

  <div class="p-4 border-bottom">
    <div class="row text-center g-3 justify-content-center">
      <div class="col-12 col-md-4">
        <p class="text-secondary small mb-1">Email Address</p>
        <h5 class="mb-0"><%= @guardian.email_address %></h5>
      </div>
      <div class="col-12 col-md-4">
        <p class="text-secondary small mb-1">Contact Number</p>
        <h5 class="mb-0"><%= @guardian.contact_number %></h5>
      </div>
      <div class="col-12 col-md-4">
        <p class="text-secondary small mb-1">Number of Students</p>
        <h5 class="mb-0"><%= @guardian.number_of_students %></h5>
      </div>
    </div>
  </div>
</div>

<!-- Action Buttons -->
<div class="d-flex justify-content-between mt-3">
  <div class="d-flex gap-2">
    <%= link_to @guardian, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
          class: "btn btn-outline-danger d-flex align-items-center gap-2 btn-glass",
          style: "padding: 0.6rem 1.4rem; border-radius: 50px; font-weight: 600;" do %>
      <i class="bi bi-trash-fill"></i>
      Destroy this guardian
    <% end %>

    <%= link_to edit_guardian_path(@guardian),
          class: "btn btn-outline-success d-flex align-items-center gap-2 btn-glass",
          style: "padding: 0.6rem 1.4rem; border-radius: 50px; font-weight: 600;" do %>
      <i class="bi bi-gear-fill"></i>
      Edit this guardian
    <% end %>
  </div>

  <%= link_to guardians_path,
        class: "btn btn-outline-secondary d-flex align-items-center gap-2 btn-glass",
        style: "padding: 0.6rem 1.4rem; border-radius: 50px; font-weight: 600;" do %>
    <i class="bi bi-box-arrow-left"></i>
    Back to guardians
  <% end %>
</div>

<!-- Bootstrap Confirmation Modal -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header bg-danger text-white">
        <h5 class="modal-title" id="confirmDeleteLabel">Confirm Delete</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <div class="modal-body">
        Are you sure you want to delete this student?
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <a href="#" id="confirmDeleteBtn" class="btn btn-danger">Delete</a>
      </div>
    </div>
  </div>
</div>