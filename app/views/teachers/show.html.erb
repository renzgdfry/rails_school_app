<style>
body {
  background: linear-gradient(
    to bottom,
    #004a99 10%,
    rgba(0, 74, 153, 0.5) 70%,
    rgba(0, 74, 153, 0) 100%
  );
  min-height: 100vh;
}
</style>

<div id="<%= dom_id @teacher %>" class="border shadow-sm rounded-3 overflow-hidden mb-3">
  <div class="p-4 d-flex align-items-center gap-3 text-white"
       style="
         background: #004a99;
         backdrop-filter: blur(8px);
         -webkit-backdrop-filter: blur(8px);
         border-bottom: 1px solid rgba(255, 255, 255, 0.15);
         box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
       ">
    <i class="bi bi-person-lines-fill fs-1" style="text-shadow: 0 0 6px rgba(173, 216, 230, 0.8);"></i>

    <div class="d-flex flex-column justify-content-center">
      <h3 class="mb-0 fw-bold"><%= @teacher.name %></h3>
      <p class="mb-0 opacity-75"><%= @teacher.email %></p>
    </div>
  </div>

  <div class="p-4"> <!-- Keep top & bottom padding -->
    <div class="row text-center g-3">
      <div class="col-6 col-md">
        <p class="text-secondary small mb-1">Specialization</p>
        <h5><%= @teacher.specialization %></h5>
      </div>

      <div class="col-6 col-md">
        <p class="text-secondary small mb-1">Status</p>
        <h5><%= @teacher.status %></h5>
      </div>

      <div class="col-6 col-md">
        <p class="text-secondary small mb-1">Department</p>
        <h5><%= @teacher.department&.name || "—" %></h5>
      </div>

      <div class="col-6 col-md">
        <p class="text-secondary small mb-1">Total Units</p>
        <h5><%= @teacher.number_of_units %></h5>
      </div>

      <div class="col-6 col-md">
        <p class="text-secondary small mb-1">Monthly Salary</p>
        <h5>₱<%= number_with_delimiter(@teacher.monthly_salary) %></h5>
      </div>
    </div>
  </div>
</div>


<div class="border rounded p-3 shadow-sm mb-3 table-responsive">
  <h3>Handled Sections</h3>
  <table class="table table-striped table-hover align-middle">
  <thead>
    <tr>
      <th class="text-start text-secondary fw-normal" style="width: 25%;">Section</th>
      <th class="text-start text-secondary fw-normal" style="width: 25%;">Subject</th>
      <th class="text-start text-secondary fw-normal" style="width: 25%;">Room</th>
      <th class="text-start text-secondary fw-normal" style="width: 25%;">Time Slot</th>
    </tr>
  </thead>
  <tbody>
    <% @teacher.subjects.each do |subject| %>
      <% subject.sections.each do |section| %>
        <tr>
          <td class="text-start"><%= section.name %></td>
          <td class="text-start"><%= section.subject.name %></td>
          <td class="text-start"><%= section.room %></td>
          <td class="text-start"><%= section.time_slot %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
</div>

<div class="d-flex justify-content-between mt-3">
  <div class="d-flex gap-2">

    <%= link_to "#",
      class: "btn btn-outline-danger d-flex align-items-center gap-2 btn-glass",
      style: "padding: 0.6rem 1.4rem; border-radius: 50px; font-weight: 600;",
      data: { bs_toggle: "modal", bs_target: "#confirmDeleteModal", teacher_id: @teacher.id } do %>
        <i class="bi bi-trash-fill"></i>
        Destroy this teacher
    <% end %>

    <%= link_to edit_teacher_path(@teacher),
      class: "btn btn-outline-success d-flex align-items-center gap-2 btn-glass",
      style: "padding: 0.6rem 1.4rem; border-radius: 50px; font-weight: 600;" do %>
        <i class="bi bi-gear-fill"></i>
        Edit this teacher
    <% end %>

  </div>

  <%= link_to teachers_path,
    class: "btn btn-outline-secondary d-flex align-items-center gap-2 btn-glass",
    style: "padding: 0.6rem 1.4rem; border-radius: 50px; font-weight: 600;" do %>
      <i class="bi bi-box-arrow-left"></i>
      Back to teachers
  <% end %>
</div>

<!-- Delete Confirmation Modal (unchanged) -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header bg-danger text-white">
        <h5 class="modal-title" id="confirmDeleteLabel">Confirm Delete</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
      </div>

      <div class="modal-body">
        Are you sure you want to delete this teacher?
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <a href="#" id="confirmDeleteBtn" class="btn btn-danger">Delete</a>
      </div>
    </div>
  </div>
</div>