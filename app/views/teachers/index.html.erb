<% content_for :title, "Teachers" %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <div class="d-flex align-items-center gap-2">
    <i class="bi bi-person-badge-fill fs-3"></i>
    <h2 class="fw-bold m-0">List of Teachers</h2>
  </div>

  <%= link_to new_teacher_path, class: "btn btn-success rounded-pill d-flex align-items-center gap-2" do %>
    <i class="bi bi-person-fill-add"></i>
    <span class="fw-semibold text-white">New Teacher</span>
  <% end %>
</div>

<div class="border shadow-sm p-4 rounded-4 table-responsive bg-white">
  <table class="table table-striped table-hover w-100">
    <thead>
      <tr>
        <th class="text-secondary fw-normal" style="width: 18%;">Name</th>
        <th class="text-secondary fw-normal" style="width: 18%;">Email</th>
        <th class="text-secondary fw-normal" style="width: 16%;">Specialization</th>
        <th class="text-secondary fw-normal" style="width: 12%;">Status</th>
        <th class="text-secondary fw-normal" style="width: 12%;">Units</th>
        <th class="text-secondary fw-normal" style="width: 14%;">Monthly Salary</th>
        <th class="text-secondary fw-normal text-center" style="width: 10%;">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @teachers.each do |teacher| %>
        <tr class="fw-medium">
          <td><%= teacher.name %></td>
          <td><%= teacher.email %></td>
          <td><%= teacher.specialization %></td>
          <td><%= teacher.status %></td>
          <td><%= teacher.number_of_units %></td>
          <td><%= teacher.monthly_salary %></td>
          <td class="d-flex justify-content-center gap-2">
            <%= link_to "Show", teacher, class: "btn btn-sm btn-primary" %>
            <%= link_to "Edit", edit_teacher_path(teacher), class: "btn btn-sm btn-secondary" %>
            <%= button_tag "Delete",
              type: "button",
              class: "btn btn-sm btn-danger",
              data: { bs_toggle: "modal", bs_target: "#confirmDeleteModal", teacher_id: teacher.id } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>