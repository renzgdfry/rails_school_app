<div class="border rounded-4 p-4 shadow-sm">
  <%= form_with(model: teacher) do |form| %>
    <% if teacher.errors.any? %>
      <div class="alert alert-danger">
        <h4><%= pluralize(teacher.errors.count, "error") %> prohibited this teacher from being saved:</h4>
        <ul>
          <% teacher.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= form.label :name, class: "form-label fw-bold" %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :email, class: "form-label fw-bold" %>
      <%= form.text_field :email, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :specialization, class: "form-label fw-bold" %>
      <%= form.text_field :specialization, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :status, class: "form-label fw-bold" %>
      <%= form.text_field :status, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :department_id, "Department", class: "form-label fw-bold" %>
      <%= form.collection_select :department_id, Department.all, :id, :name,
            { prompt: "Select a department" },
            { class: "form-select" } %>
    </div>

    <% if teacher.new_record? %>
      <div class="d-flex justify-content-between">
        <%= link_to teachers_path,
              class: "btn btn-outline-secondary d-flex align-items-center gap-2 btn-glass",
              style: "padding: 0.6rem 1.4rem; border-radius: 50px; font-weight: 600;" do %>
          <i class="bi bi-box-arrow-left"></i>
          Back to teachers
        <% end %>

        <%= form.button class: "btn btn-outline-success d-flex align-items-center gap-2 btn-glass",
              style: "padding: 0.6rem 1.4rem; border-radius: 50px; font-weight: 600;" do %>
          <i class="bi bi-plus-circle-fill"></i>
          Create Teacher
        <% end %>
      </div>
    <% else %>
      <div class="d-flex justify-content-between align-items-center mt-3">
        <div class="d-flex gap-2">
          <%= link_to "#",
                class: "btn btn-outline-danger d-flex align-items-center gap-2 btn-glass",
                style: "padding: 0.6rem 1.4rem; border-radius: 50px; font-weight: 600;",
                data: { bs_toggle: "modal", bs_target: "#confirmDeleteModal", teacher_id: teacher.id } do %>
            <i class="bi bi-trash-fill"></i>
            Delete Teacher
          <% end %>

          <%= form.button class: "btn btn-outline-success d-flex align-items-center gap-2 btn-glass",
                style: "padding: 0.6rem 1.4rem; border-radius: 50px; font-weight: 600;" do %>
            <i class="bi bi-arrow-repeat"></i>
            Update Teacher
          <% end %>
        </div>

        <%= link_to teachers_path,
              class: "btn btn-outline-secondary d-flex align-items-center gap-2 btn-glass",
              style: "padding: 0.6rem 1.4rem; border-radius: 50px; font-weight: 600;" do %>
          <i class="bi bi-box-arrow-left"></i>
          Back to teachers
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>