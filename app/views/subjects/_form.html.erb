<div class="border rounded-4 p-4 shadow-sm">
  <%= form_with(model: subject) do |form| %>
    <% if subject.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(subject.errors.count, "error") %> prohibited this subject from being saved:</h2>
        <ul>
          <% subject.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= form.label :name, class: "form-label fw-bold" %>
      <%= form.text_field :name, class: "form-control", placeholder: "Enter subject name" %>
    </div>

    <div class="mb-3">
      <%= form.label :teacher_id, "Teacher", class: "form-label fw-bold" %>
      <%= form.collection_select :teacher_id, Teacher.all, :id, :name, { prompt: "Select a teacher" }, { class: "form-select" } %>
    </div>

    <div class="mb-3">
      <%= form.label :number_of_units, "Number of Units", class: "form-label fw-bold" %>
      <%= form.number_field :number_of_units, class: "form-control", placeholder: "Enter number of units" %>
    </div>

    <% if subject.new_record? %>
      <div class="d-flex justify-content-between">
        <div>
          <%= link_to subjects_path, class: "btn btn-secondary d-flex align-items-center gap-2" do %>
            <i class="bi bi-box-arrow-left"></i>
            Back to subjects
          <% end %>
        </div>
        <div>
          <%= form.button class: "btn btn-success d-flex align-items-center gap-2" do %>
            <i class="bi bi-plus-circle-fill"></i>
            Create Subject
          <% end %>
        </div>
      </div>
    <% else %>
      <div class="d-flex justify-content-between align-items-center mt-3">
        <div class="d-flex gap-2">
          <%= link_to "#",
              class: "btn btn-danger d-flex align-items-center gap-2",
              data: { bs_toggle: "modal", bs_target: "#confirmDeleteModal", subject_id: subject.id } do %>
            <i class="bi bi-trash-fill"></i>
            Destroy this subject
          <% end %>

          <%= form.button class: "btn btn-success d-flex align-items-center gap-2" do %>
            <i class="bi bi-arrow-repeat"></i>
            Update Subject
          <% end %>
        </div>

        <%= link_to subjects_path, class: "btn btn-secondary d-flex align-items-center gap-2" do %>
          <i class="bi bi-box-arrow-left"></i>
          Back to subjects
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>
