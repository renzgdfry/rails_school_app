<% content_for :title, "Subjects" %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <div class="d-flex align-items-center gap-2">
    <i class="bi bi-book-half fs-3"></i>
    <h2 class="fw-bold m-0">List of Subjects</h2>
  </div>

  <%= link_to new_subject_path, class: "btn btn-success rounded-pill d-flex align-items-center gap-2" do %>
    <i class="bi bi-bookmark-plus"></i>
    <span class="fw-semibold text-white">New Subject</span>
  <% end %>
</div>

<div class="border shadow-sm p-4 rounded-4 table-responsive bg-white">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th class="text-secondary fw-normal">Name</th>
        <th class="text-secondary fw-normal">Teacher</th>
        <th class="text-secondary fw-normal">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @subjects.each do |subject| %>
        <tr class="fw-medium">
          <td><%= subject.name %></td>
          <td><%= subject.teacher.name %></td>
          <td class="d-flex gap-2">
            <%= link_to "Show", subject, class: "btn btn-sm btn-primary" %>
            <%= link_to "Edit", edit_subject_path(subject), class: "btn btn-sm btn-secondary" %>
            <%= link_to "Delete", "#",
  class: "btn btn-danger btn-sm",
  data: {
    bs_toggle: "modal",
    bs_target: "#confirmDeleteModal",
    id: subject.id,
    type: "subject"
  } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>