<% content_for :title, "Subjects" %>

<style>
  .subject-glass-card {
    background: rgba(255, 255, 255, 0.25);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.4);
    border-radius: 20px;
    transition: all 0.25s ease;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
    overflow: hidden;
  }

  .subject-glass-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
  }

  .subject-glass-body {
    background: rgba(13, 110, 253, 0.1);
    backdrop-filter: blur(12px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.2);
    color: #052659;
    height: 150px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: 1rem 1.25rem;
  }

  .subject-glass-body h5 {
    font-weight: 700;
    margin-bottom: 0;
  }

  .subject-glass-actions {
    background: rgba(255, 255, 255, 0.5);
    backdrop-filter: blur(6px);
    border-top: 1px solid rgba(0, 0, 0, 0.05);
  }

  .subject-glass-actions i {
    color: #333;
    transition: color 0.18s ease;
  }

  .subject-glass-actions a:nth-child(1):hover i,
  .subject-glass-actions a:nth-child(1):focus-visible i {
    color: #0d6efd;
  }

  .subject-glass-actions a:nth-child(2):hover i,
  .subject-glass-actions a:nth-child(2):focus-visible i {
    color: #6c757d;
  }

  .subject-glass-actions a:nth-child(3):hover i,
  .subject-glass-actions a:nth-child(3):focus-visible i {
    color: #dc3545;
  }

  .btn-new-subject {
    background: #198754;
    color: white;
    border: none;
    border-radius: 50px;
    padding: 0.6rem 1.4rem;
    font-weight: 600;
    box-shadow: 0 3px 10px rgba(25, 135, 84, 0.4);
    transition: all 0.2s ease;
  }

  .btn-new-subject:hover {
    background: #157347;
    transform: scale(1.03);
    color: white;
  }
</style>

<div class="d-flex justify-content-between align-items-center mb-4">
  <div class="d-flex align-items-center gap-2">
    <i class="bi bi-list-check fs-3"></i>
    <h2 class="fw-bold m-0">List of Subjects</h2>
  </div>

  <%= link_to new_subject_path, class: "btn btn-new-subject d-flex align-items-center gap-2" do %>
    <i class="i bi-clipboard2-plus-fill"></i>
    <span>New Subject</span>
  <% end %>
</div>

<!-- Glassy Card Grid -->
<div class="row g-4">
  <% @subjects.each do |subject| %>
    <div class="col-12 col-sm-6 col-md-4 col-lg-3">
      <div class="subject-glass-card h-100">
        <div class="subject-glass-body">
          <div class="d-flex justify-content-between align-items-start">
            <i class="bi bi-book-half fs-2 opacity-75"></i>
          </div>
          <div>
            <h5 class="text-truncate"><%= subject.name %></h5>
          </div>
        </div>

        <div class="subject-glass-actions d-flex justify-content-end align-items-center gap-4 p-2 pe-3">
          <%= link_to subject, class: "fs-5" do %>
            <i class="bi bi-eye"></i>
          <% end %>

          <%= link_to edit_subject_path(subject), class: "fs-5" do %>
            <i class="bi bi-pencil"></i>
          <% end %>

          <%= link_to "#",
              class: "fs-5",
              data: { 
                bs_toggle: "modal",
                bs_target: "#confirmDeleteModal",
                id: subject.id,
                type: "subject" 
              } do %>
            <i class="bi bi-trash"></i>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<!-- Bootstrap Confirmation Modal -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header bg-danger text-white">
        <h5 class="modal-title" id="confirmDeleteLabel">Confirm Delete</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Are you sure you want to delete this subject?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <a href="#" id="confirmDeleteBtn" class="btn btn-danger">Delete</a>
      </div>
    </div>
  </div>
</div>