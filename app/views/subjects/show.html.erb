<div id="<%= dom_id @subject %>" class="border shadow-sm rounded-3 overflow-hidden mb-3">
  <div class="p-4 d-flex align-items-center gap-3 text-white"
       style="
         background: linear-gradient(135deg, rgba(13, 60, 150, 0.9), rgba(70, 130, 180, 0.8));
         backdrop-filter: blur(8px);
         -webkit-backdrop-filter: blur(8px);
         border-bottom: 1px solid rgba(255, 255, 255, 0.15);
         box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
       ">
    <i class="bi bi-book-fill fs-1" style="text-shadow: 0 0 6px rgba(173, 216, 230, 0.8);"></i>
    <div class="d-flex flex-column justify-content-center">
      <h3 class="mb-0 fw-bold"><%= @subject.name %></h3>
      <p class="mb-0 opacity-75"></p>
    </div>
  </div>

  <div class="p-4 border-bottom">
    <div class="row text-center g-3 justify-content-center">
      <div class="col-12 col-md-3">
        <p class="text-secondary small mb-1">Number of Units</p>
        <h5><%= @subject.number_of_units %></h5>
      </div>
      <div class="col-12 col-md-3">
        <p class="text-secondary small mb-1">Teacher</p>
        <h5><%= @subject.teacher&.name || "â€”" %></h5>
      </div>
      <div class="col-12 col-md-3">
        <p class="text-secondary small mb-1">Number of Sections</p>
        <h5><%= @subject.sections.count %></h5>
      </div>
    </div>
  </div>
</div>

<div class="border rounded p-3 shadow-sm mb-3 table-responsive">
  <h3>Sections List</h3>
  <% @subject.sections.each do |section| %>
    <div class="border rounded p-3 mb-3">
      <div class="d-flex justify-content-between align-items-center mb-2">
        <h5 class="fw-bold mb-0">
          <i class="bi bi-people-fill me-2"></i>
          Section: <%= section.name %>
        </h5>
        <small class="text-muted">
          Room: <%= section.room %> | Time Slot: <%= section.time_slot %> | Students: <%= section.number_of_students %>
        </small>
      </div>

      <table class="table table-striped table-hover align-middle">
        <thead>
          <tr>
            <th class="text-secondary fw-normal">Student Name</th>
            <th class="text-secondary fw-normal">Program</th>
            <th class="text-secondary fw-normal">Year Level</th>
          </tr>
        </thead>
        <tbody>
          <% section.classlists.each do |classlist| %>
            <tr class="fw-medium">
              <td><%= classlist.student.name %></td>
              <td><%= classlist.student.program %></td>
              <td><%= classlist.student.year_level %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>

<div class="d-flex justify-content-between mt-3">
  <div class="d-flex gap-2">
    <%= link_to "#",
      class: "btn btn-danger d-flex align-items-center gap-2",
      data: { bs_toggle: "modal", bs_target: "#confirmDeleteModal", subject_id: @subject.id } do %>
      <i class="bi bi-trash-fill"></i>
      Destroy this subject
    <% end %>

    <%= link_to edit_subject_path(@subject), class: "btn btn-success d-flex align-items-center gap-2" do %>
      <i class="bi bi-gear-fill"></i>
      Edit this subject
    <% end %>
  </div>

  <div>
    <%= link_to subjects_path, class: "btn btn-secondary d-flex align-items-center gap-2" do %>
      <i class="bi bi-box-arrow-left"></i>
      Back to subjects
    <% end %>
  </div>
</div>
