<div id="<%= dom_id @subject %>" class="border shadow-sm rounded-3 overflow-hidden mb-3">
  <div class="p-4 d-flex align-items-center gap-3 text-white"
       style="
         background: #004a99;
         backdrop-filter: blur(8px);
         -webkit-backdrop-filter: blur(8px);
         border-bottom: 1px solid rgba(255, 255, 255, 0.15);
         box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
       ">
    <i class="bi bi-book-fill fs-1" style="text-shadow: 0 0 6px rgba(173, 216, 230, 0.8);"></i>
    <div class="d-flex flex-column justify-content-center">
      <h3 class="mb-0 fw-bold"><%= @subject.name %></h3>
      <p class="mb-0 opacity-75"></p>
    </div>
  </div>

  <div class="p-4 border-bottom">
    <div class="row text-center g-3 justify-content-center">
      <div class="col-12 col-md-3">
        <p class="text-secondary small mb-1">Number of Units</p>
        <h5><%= @subject.number_of_units %></h5>
      </div>

      <div class="col-12 col-md-3">
        <p class="text-secondary small mb-1">Teacher</p>
        <h5><%= @subject.teacher&.name || "â€”" %></h5>
      </div>

      <div class="col-12 col-md-3">
        <p class="text-secondary small mb-1">Number of Sections</p>
        <h5><%= @subject.sections.count %></h5>
      </div>
    </div>
  </div>
</div>

  <% @subject.sections.each do |section| %>
    <div class="border rounded p-3 mb-3">
      <div class="d-flex justify-content-between align-items-center mb-2">
        <h5 class="fw-bold mb-0">
          Section: <%= section.name %>
        </h5>

        <small class="fw-semibold" style="color: #000; font-size: 1.25rem;">
  Room: <%= section.room %> |
  Time Slot: <%= section.time_slot %> |
  Students: <%= section.number_of_students %>
</small>
      </div>

      <table class="table table-striped table-hover align-middle">
        <thead>
          <tr>
            <th class="text-secondary fw-normal">Student Name</th>
            <th class="text-secondary fw-normal">Program</th>
            <th class="text-secondary fw-normal">Year Level</th>
          </tr>
        </thead>
        <tbody>
          <% section.classlists.each do |classlist| %>
            <tr class="fw-medium">
              <td><%= classlist.student.name %></td>
              <td><%= classlist.student.program %></td>
              <td><%= classlist.student.year_level %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>

<div class="d-flex justify-content-between mt-3">
  <div class="d-flex gap-2">

    <%= link_to "#",
      class: "btn btn-outline-danger d-flex align-items-center gap-2 btn-glass",
      style: "padding: 0.6rem 1.4rem; border-radius: 50px; font-weight: 600;",
      data: { bs_toggle: "modal", bs_target: "#confirmDeleteModal", subject_id: @subject.id } do %>
        <i class="bi bi-trash-fill"></i>
        Destroy this subject
    <% end %>

    <%= link_to edit_subject_path(@subject),
      class: "btn btn-outline-success d-flex align-items-center gap-2 btn-glass",
      style: "padding: 0.6rem 1.4rem; border-radius: 50px; font-weight: 600;" do %>
        <i class="bi bi-gear-fill"></i>
        Edit this subject
    <% end %>

  </div>

  <%= link_to subjects_path,
    class: "btn btn-outline-secondary d-flex align-items-center gap-2 btn-glass",
    style: "padding: 0.6rem 1.4rem; border-radius: 50px; font-weight: 600;" do %>
      <i class="bi bi-box-arrow-left"></i>
      Back to subjects
  <% end %>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header bg-danger text-white">
        <h5 class="modal-title" id="confirmDeleteLabel">Confirm Delete</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <div class="modal-body">
        Are you sure you want to delete this subject?
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <a href="#" id="confirmDeleteBtn" class="btn btn-danger">Delete</a>
      </div>
    </div>
  </div>
</div>