<% content_for :title, "Classlists" %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <div class="d-flex align-items-center gap-2">
    <i class="bi bi-card-checklist fs-3"></i>
    <h2 class="fw-bold m-0">List of Classlists</h2>
  </div>

  <%= link_to new_classlist_path, class: "btn btn-success rounded-pill d-flex align-items-center gap-2" do %>
    <i class="bi bi-plus-circle"></i>
    <span class="fw-semibold text-white">New Classlist</span>
  <% end %>
</div>

<div class="border shadow-sm p-4 rounded-4 table-responsive bg-white">
  <table class="table table-striped table-hover w-100">
    <thead>
      <tr>
        <th class="text-secondary fw-normal" >Student</th>
        <th class="text-secondary fw-normal" >Section</th>
        <th class="text-secondary fw-normal text-center" >Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @classlists.each do |classlist| %>
        <tr class="fw-medium">
          <td><%= classlist.student.name %></td>
          <td><%= classlist.section.name %></td>
          <td class="d-flex justify-content-center gap-2">
            <%= link_to "Show", classlist, class: "btn btn-sm btn-primary" %>
            <%= link_to "Edit", edit_classlist_path(classlist), class: "btn btn-sm btn-secondary" %>
            <%= button_tag "Delete",
              type: "button",
              class: "btn btn-sm btn-danger",
              data: { bs_toggle: "modal", bs_target: "#confirmDeleteModal", classlist_id: classlist.id } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>