<div class="border rounded-4 p-4 shadow-sm">
  <%= form_with(model: classlist) do |form| %>
    <% if classlist.errors.any? %>
      <div class="alert alert-danger">
        <h4><%= pluralize(classlist.errors.count, "error") %> prohibited this classlist from being saved:</h4>
        <ul>
          <% classlist.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= form.label :student_id, "Student", class: "form-label fw-bold" %>
      <%= form.collection_select :student_id, Student.all, :id, :name,
            { prompt: "Select a student" },
            { class: "form-select" } %>
    </div>

    <div class="mb-3">
      <%= form.label :section_id, "Section", class: "form-label fw-bold" %>
      <%= form.collection_select :section_id, Section.all, :id, :name,
            { prompt: "Select a section" },
            { class: "form-select" } %>
    </div>

    <% if classlist.new_record? %>
      <div class="d-flex justify-content-between">
        <div>
          <%= link_to classlists_path, class: "btn btn-secondary d-flex align-items-center gap-2" do %>
            <i class="bi bi-box-arrow-left"></i>
            Back to classlists
          <% end %>
        </div>
        <div>
          <%= form.button class: "btn btn-success d-flex align-items-center gap-2" do %>
            <i class="bi bi-plus-circle-fill"></i>
            Create Classlist
          <% end %>
        </div>
      </div>
    <% else %>
      <div class="d-flex justify-content-between align-items-center mt-3">
        <div class="d-flex gap-2">
          <%= link_to "#",
              class: "btn btn-danger d-flex align-items-center gap-2",
              data: { bs_toggle: "modal", bs_target: "#confirmDeleteModal", classlist_id: classlist.id } do %>
            <i class="bi bi-trash-fill"></i>
            Destroy this classlist
          <% end %>

          <%= form.button class: "btn btn-success d-flex align-items-center gap-2" do %>
            <i class="bi bi-arrow-repeat"></i>
            Update Classlist
          <% end %>
        </div>

        <%= link_to classlists_path, class: "btn btn-secondary d-flex align-items-center gap-2" do %>
          <i class="bi bi-box-arrow-left"></i>
          Back to classlists
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>
