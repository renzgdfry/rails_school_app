<div id="<%= dom_id @classlist %>" class="border shadow-sm rounded-3 overflow-hidden mb-3">
  <div class="p-4 d-flex align-items-center gap-3 text-white"
       style="
         background: linear-gradient(135deg, rgba(13, 60, 150, 0.9), rgba(70, 130, 180, 0.8));
         backdrop-filter: blur(8px);
         -webkit-backdrop-filter: blur(8px);
         border-bottom: 1px solid rgba(255, 255, 255, 0.15);
         box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
       ">
    <i class="bi bi-list-check fs-1" style="text-shadow: 0 0 6px rgba(173, 216, 230, 0.8);"></i>

    <div class="d-flex flex-column justify-content-center">
      <h3 class="mb-0 fw-bold">Classlist Details</h3>
    </div>
  </div>

  <div class="p-4 border-bottom">
    <div class="row text-center g-3 justify-content-center">
      <div class="col-12 col-md-6">
        <p class="text-secondary small mb-1">Student Name</p>
        <h5><%= @classlist.student.name %></h5>
      </div>

      <div class="col-12 col-md-6">
        <p class="text-secondary small mb-1">Section</p>
        <h5><%= @classlist.section.name %></h5>
      </div>
    </div>
  </div>
</div>

<div class="d-flex justify-content-between mt-3">
  <div class="d-flex gap-2">
    <%= link_to "#",
      class: "btn btn-danger d-flex align-items-center gap-2",
      data: { bs_toggle: "modal", bs_target: "#confirmDeleteModal", classlist_id: @classlist.id } do %>
      <i class="bi bi-trash-fill"></i>
      Destroy this classlist
    <% end %>

    <%= link_to edit_classlist_path(@classlist), class: "btn btn-success d-flex align-items-center gap-2" do %>
      <i class="bi bi-gear-fill"></i>
      Edit this classlist
    <% end %>
  </div>

  <div>
    <%= link_to classlists_path, class: "btn btn-secondary d-flex align-items-center gap-2" do %>
      <i class="bi bi-box-arrow-left"></i>
      Back to classlists
    <% end %>
  </div>
</div>
