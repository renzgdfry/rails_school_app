<div id="<%= dom_id @department %>" class="border shadow-sm rounded-3 overflow-hidden mb-3">
  <!-- Department Header -->
  <div class="p-4 d-flex align-items-center gap-3 text-white"
       style="
         background: #004a99;
         backdrop-filter: blur(8px);
         -webkit-backdrop-filter: blur(8px);
         border-bottom: 1px solid rgba(255, 255, 255, 0.15);
         box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
       ">
    <i class="bi bi-bank2 fs-1" style="text-shadow: 0 0 6px rgba(173, 216, 230, 0.8);"></i>
    <div class="d-flex flex-column justify-content-center">
      <h3 class="mb-0 fw-bold"><%= @department.name %></h3>
      <p class="mb-0 opacity-75">Department</p>
    </div>
  </div>

  <!-- Department Info Row -->
  <div class="p-4"> <!-- keep top & bottom padding -->
    <div class="row text-center g-3 justify-content-center">
      <div class="col-12 col-md-4">
        <p class="text-secondary small mb-1">Location</p>
        <h5 class="mb-0"><%= @department.location %></h5>
      </div>
      <div class="col-12 col-md-4">
        <p class="text-secondary small mb-1">Number of Students</p>
        <h5 class="mb-0"><%= @department.student_count %></h5>
      </div>
      <div class="col-12 col-md-4">
        <p class="text-secondary small mb-1">Number of Employees</p>
        <h5 class="mb-0"><%= @department.employee_count %></h5>
      </div>
    </div>
  </div>
</div>

<!-- Students Table -->
<div class="mb-4 table-responsive">
  <h4 class="fw-bold mb-3">List of Students</h4>
  <table class="table table-striped table-hover align-middle">
    <thead>
      <tr>
        <th class="text-secondary fw-normal text-start">Name</th>
        <th class="text-secondary fw-normal text-start">Program</th>
        <th class="text-secondary fw-normal text-start">Year Level</th>
        <th class="text-secondary fw-normal text-start">Total Assessment</th>
      </tr>
    </thead>
    <tbody>
      <% @department.students.each do |student| %>
        <tr>
          <td><%= student.name %></td>
          <td><%= student.program %></td>
          <td><%= student.year_level %></td>
          <td>₱<%= number_with_delimiter(student.total_assessment) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<!-- Teachers Table -->
<div class="mb-4 table-responsive">
  <h4 class="fw-bold mb-3">List of Teachers</h4>
  <table class="table table-striped table-hover align-middle">
    <thead>
      <tr>
        <th class="text-secondary fw-normal text-start">Name</th>
        <th class="text-secondary fw-normal text-start">Email</th>
        <th class="text-secondary fw-normal text-start">Specialization</th>
        <th class="text-secondary fw-normal text-start">Status</th>
        <th class="text-secondary fw-normal text-start">Monthly Salary</th>
      </tr>
    </thead>
    <tbody>
      <% @department.teachers.each do |teacher| %>
        <tr>
          <td><%= teacher.name %></td>
          <td><%= teacher.email %></td>
          <td><%= teacher.specialization %></td>
          <td><%= teacher.status %></td>
          <td>₱<%= number_with_delimiter(teacher.monthly_salary) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<!-- Staff Table -->
<div class="mb-4 table-responsive">
  <h4 class="fw-bold mb-3">List of Staff</h4>
  <table class="table table-striped table-hover align-middle">
    <thead>
      <tr>
        <th class="text-secondary fw-normal text-start">Name</th>
        <th class="text-secondary fw-normal text-start">Email</th>
        <th class="text-secondary fw-normal text-start">Status</th>
        <th class="text-secondary fw-normal text-start">Monthly Salary</th>
      </tr>
    </thead>
    <tbody>
      <% @department.staffs.each do |staff| %>
        <tr>
          <td><%= staff.name %></td>
          <td><%= staff.email %></td>
          <td><%= staff.status %></td>
          <td>₱<%= number_with_delimiter(staff.monthly_salary) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<!-- Action Buttons -->
<div class="d-flex justify-content-between mt-3">
  <div class="d-flex gap-2">
    <%= link_to @department, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
          class: "btn btn-outline-danger d-flex align-items-center gap-2 btn-glass",
          style: "padding: 0.6rem 1.4rem; border-radius: 50px; font-weight: 600;" do %>
      <i class="bi bi-trash-fill"></i>
      Destroy this department
    <% end %>

    <%= link_to edit_department_path(@department),
          class: "btn btn-outline-success d-flex align-items-center gap-2 btn-glass",
          style: "padding: 0.6rem 1.4rem; border-radius: 50px; font-weight: 600;" do %>
      <i class="bi bi-gear-fill"></i>
      Edit this department
    <% end %>
  </div>

  <%= link_to departments_path,
        class: "btn btn-outline-secondary d-flex align-items-center gap-2 btn-glass",
        style: "padding: 0.6rem 1.4rem; border-radius: 50px; font-weight: 600;" do %>
    <i class="bi bi-box-arrow-left"></i>
    Back to departments
  <% end %>
</div>

<!-- Bootstrap Confirmation Modal -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header bg-danger text-white">
        <h5 class="modal-title" id="confirmDeleteLabel">Confirm Delete</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <div class="modal-body">
        Are you sure you want to delete this student?
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <a href="#" id="confirmDeleteBtn" class="btn btn-danger">Delete</a>
      </div>
    </div>
  </div>
</div>