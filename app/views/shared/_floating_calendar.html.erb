<!-- FLOATING FULL MONTH CALENDAR -->
<div class="floating-calendar">

  <div class="calendar-panel" id="calendarPanel">
    <div class="calendar-header">
      <button class="cal-nav" id="prevMonth">‹</button>
      <span id="monthLabel"></span>
      <button class="cal-nav" id="nextMonth">›</button>
    </div>

    <div class="calendar-grid">
      <div class="day-header">Mon</div>
      <div class="day-header">Tue</div>
      <div class="day-header">Wed</div>
      <div class="day-header">Thu</div>
      <div class="day-header">Fri</div>
      <div class="day-header">Sat</div>
      <div class="day-header">Sun</div>
    </div>
  </div>

  <button class="calendar-toggle" id="calendarToggle">
    <i class="bi bi-calendar-month"></i>
  </button>

</div>
